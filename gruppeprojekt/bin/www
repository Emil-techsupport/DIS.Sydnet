#!/usr/bin/env node

// Indlæs .env fil så dens indhold kan bruges.
require('dotenv').config();

var app = require('../app');
var debug = require('debug')('gruppeprojekt:server');
var http = require('http');

// Sæt port nummer ved hjælp af funktion
var port = normalizePort(process.env.PORT || '3000');
console.log('PORT environment variable:', process.env.PORT);
console.log('Server will listen on port:', port);
app.set('port', port);

// Opretter en HTTP server.
var server = http.createServer(app);

// Sætter serveren til at lytte på porten der er sat op
server.listen(port);
// Hvis serveren fejler under opstart, så kalder vi "onError" funktion
server.on('error', onError);
// Når serveren er starter og lytter på vores port, så kalder vi "onListening" funktionen
server.on('listening', onListening);

//funktion omdanne og tjekke portnummer
function normalizePort(val) {
  //Laver vores port nummer fra en streng til et tal
  var port = parseInt(val, 10);

  //Hvis dette ikke lykkes, så returner den value der blev givet til funktionen
  if (isNaN(port)) {
    return val;
  }
  //Hvis "port" variablen er blevet til et nummer og det er større end 0, så returner dette nummer
  if (port >= 0) {
    return port;
  }
  //Som default returner false
  return false;
}

//Funktion der bliver kaldt i tilfælde af en server fejl
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // Håndtere forskellige fejl med forskellige beskeder:
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

//Funktion der kaldes, hvis det lykkes at starte serveren uden problemer.
function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
